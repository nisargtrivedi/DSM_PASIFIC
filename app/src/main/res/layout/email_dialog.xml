<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_border_white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/mon_regular"
        android:textSize="@dimen/_14ssp"
        android:text="Send email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <View
        android:id="@+id/line"
        android:layout_below="@id/tvTitle"
        android:background="#33000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
    <TextView
        android:id="@+id/Message"
        android:layout_below="@id/line"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/mon_regular"
        android:textSize="@dimen/_13ssp"
        android:text="Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtMessage"
        android:gravity="top"
        android:textColorHint="#80000000"
        android:textColor="#80000000"
        android:paddingRight="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:hint="Message"
        android:paddingLeft="@dimen/_6sdp"
        android:fontFamily="@font/mon_regular"
        android:textSize="@dimen/_10ssp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_below="@id/Message"
        android:background="@drawable/rect_border_black"
        android:layout_width="match_parent"
        android:minHeight="@dimen/_100sdp"
        android:layout_height="wrap_content"></androidx.appcompat.widget.AppCompatEditText>
    <TextView
        android:id="@+id/Email"
        android:layout_below="@id/edtMessage"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/mon_regular"
        android:textSize="@dimen/_13ssp"
        android:text="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtEmail"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/mon_regular"
        android:paddingLeft="@dimen/_7sdp"
        android:hint="demo@gmail.com"
        android:textColorHint="#80000000"
        android:textColor="#80000000"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_below="@id/Email"
        android:background="@drawable/rect_border_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"></androidx.appcompat.widget.AppCompatEditText>

    <TextView
        android:id="@+id/tvCheck"
        android:textColor="@color/black"
        android:drawablePadding="@dimen/_5sdp"
        android:gravity="center|left"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/mon_regular"
        android:text="Send a copy to me"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_below="@id/edtEmail"
        android:drawableLeft="@drawable/ic_chk"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"></TextView>

    <com.google.android.material.button.MaterialButton
        app:cornerRadius="0dp"
        android:insetBottom="0dp"
        android:insetTop="0dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_below="@id/tvCheck"
        android:id="@+id/btnSend"
        android:layout_width="@dimen/_100sdp"
        android:text="Send"
        android:textAllCaps="false"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"
        android:fontFamily="@font/mon_regular"
        app:backgroundTint="@color/navigation_color"
        android:layout_height="@dimen/_35sdp"></com.google.android.material.button.MaterialButton>
    <TextView
        android:id="@+id/btnClose"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        android:gravity="center"
        android:fontFamily="@font/mon_regular"
        android:text="Close"
        android:background="@drawable/rect_border_black"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_below="@id/tvCheck"
        android:layout_toRightOf="@id/btnSend"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_35sdp"></TextView>
</RelativeLayout>